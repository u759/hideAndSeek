<?xml version="1.0" encoding="UTF-8"?>
<jboss-web xmlns="http://www.jboss.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee 
                               http://www.jboss.org/schema/jbossas/jboss-web_14_0.xsd"
           version="14.0">
    
    <!-- Context root for the application -->
    <context-root>/hideandseek</context-root>
    
    <!-- Enable class loading isolation -->
    <class-loading>
        <module-name>deployment.hideandseek.war</module-name>
    </class-loading>
    
</jboss-web>
